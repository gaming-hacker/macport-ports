                    port:x264 \
                    port:x265 \
                    port:zimg \
                    port:libsdl2 \
                    port:dav1d \
                    port:nasm \
                    port:samba3 \
                    port:libfdk-aac


default_variants-append +gpl2


configure.cflags-append -DHAVE_LRINTF ${configure.cppflags}
configure.args     --arch=x86_64 \
--cc=/opt/local/bin/clang-mp-13 \
--cxx=/opt/local/bin/clang++-mp-13 \
--env="CFLAGS=-I/opt/local/include LDFLAGS=-L/opt/local/lib" \
--extra-cflags='-O3 -pipe -m64 -arch x86_64 -march=native -mtune=native -mmacosx-version-min=10.13 -fomit-frame-pointer -fno-common -mavx -mavx2 -mfma -mfpmath=sse -msse2 -msse3 -msse4.1 -msse4.2 -std=gnu11' \
--extra-cxxflags='-O3 -pipe -m64 -arch x86_64 -march=native -mtune=native -mmacosx-version-min=10.13 -fomit-frame-pointer -fno-common -mavx -mavx2 -mfma -mfpmath=sse -msse2 -msse3 -msse4.1 -msse4.2 -std=c++17' \
--extra-libs='-lpthread -lm' \
--enable-swscale --enable-avfilter  \
--enable-lzma --enable-gnutls --enable-fontconfig \
--enable-libfreetype --disable-indev=jack --disable-libjack \
--enable-pic \
--enable-shared --enable-static \
--enable-pthreads --enable-version3  --enable-gpl \
--enable-postproc --enable-nonfree \
--enable-appkit \
--enable-avfoundation \
--enable-coreimage \
--enable-filter=coreimage \
--enable-filter=coreimagesrc \
--enable-indev=avfoundation \
--enable-audiotoolbox \
--enable-videotoolbox \
--enable-libass \
--enable-libbluray \
--enable-libcaca \
--enable-libcelt \
--enable-libfdk-aac \
--enable-libfontconfig \
--enable-frei0r \
--enable-libfribidi \
--enable-libmp3lame \
--enable-libopenjpeg \
--enable-libopus \
--enable-libmodplug \
--enable-libpulse \
--enable-libsoxr \
--enable-libspeex \
--enable-libtheora \
--enable-librsvg \
--enable-librubberband \
--enable-sdl2 \
--enable-libvorbis \
--enable-libvpx \
--enable-libx265 \
--enable-libx264 \
--enable-libxcb --enable-libxcb-xfixes --enable-libxcb-shape \
--enable-libxml2 \
--enable-libxvid \
--enable-libwebp \
--enable-opencl \
--enable-outdev=xv \
--enable-opengl \
--enable-libsmbclient \
--enable-hardcoded-tables \
--sws-max-filter-size=1024 \
--enable-doc \
--enable-gray \
--enable-x86asm \
--disable-securetransport \
--mandir=/opt/local/share/man \
 --enable-libzimg \
 --enable-libdav1d

build.cmd           ${prefix}/bin/gmake
build.env-append    V=1

test.run            yes

destroot.env-append V=1

post-destroot {
    file mkdir ${destroot}${prefix}/share/doc/ffmpeg
    file copy ${worksrcpath}/doc/APIchanges ${destroot}${prefix}/share/doc/ffmpeg
    foreach f [glob ${worksrcpath}/doc/*.txt] {
        file copy $f ${destroot}${prefix}/share/doc/ffmpeg
    }
}


platform darwin 8 {
    post-patch {
        reinplace "s:,-compatibility_version,$\(LIBMAJOR\)::" ${worksrcpath}/configure
    }
}

configure.universal_args-delete --disable-dependency-tracking

