name                ffmpeg
set my_name         ffmpeg
conflicts           ffmpeg-devel
# Please increase the revision of mpv whenever ffmpeg's version is updated.
epoch               1
version             20220311
revision            0
license             LGPL-2.1+
categories          multimedia
maintainers         {devans @dbevans} {jeremyhu @jeremyhu} {mascguy @mascguy} openmaintainer

description         FFmpeg is a complete solution to play, record, convert and \
                    stream audio and video.

long_description    FFmpeg is a complete solution to record, convert and \
                    stream audio and video. It includes libavcodec, the \
                    leading audio/video codec library. \

platforms           darwin
homepage            https://ffmpeg.org/
master_sites        file:///Users/glen/local/repo/macports/
distname            ${name}

extract.suffix      .zip
use_zip             yes
checksum.skip  yes

configure.cc clang-mp-13

configure.cpp clang++-mp-13

depends_build       port:pkgconfig \
                    port:gmake \
                    port:cctools \
                    port:texinfo \
                    port:clang-13

depends_lib         port:lame \
                    port:libiconv \
                    port:libvorbis \
                    port:libopus \
                    port:libogg \
                    path:lib/pkgconfig/librsvg-2.0.pc:librsvg \
                    port:libtheora \
                    port:libmodplug \
                    port:libass \
                    port:libbluray \
                    path:lib/pkgconfig/vpx.pc:libvpx \
                    port:gnutls \
                    port:openjpeg \
                    port:zvbi \
                    port:fontconfig \
                    port:freetype \
                    port:fribidi \
                    path:lib/libspeex.dylib:speex \
                    port:soxr \
                    port:bzip2 \
