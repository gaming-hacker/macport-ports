if {${name} ne ${subport}} {
    post-destroot {
        set docdir ${destroot}${prefix}/share/doc/${subport}
        xinstall -d ${docdir}
        xinstall -m 644 -W ${worksrcpath} \
            CHANGES.txt README.rst index.rst \
            ${docdir}
    }

    pre-test {
        test.env    PYTHONPATH=[glob -nocomplain ${worksrcpath}/build/lib*]

    }

    test.run        yes

    livecheck.type  none
