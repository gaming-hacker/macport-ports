if {${name} ne ${subport}} {
    depends_build-append \
                    port:py${python.version}-pip

    set tf_py_path ${frameworks_dir}/Python.framework/Versions/${python.branch}/lib/python${python.branch}/site-packages/tensorflow
    depends_run-append \
                    path:${tf_py_path}:py${python.version}-tensorflow \
                    port:py${python.version}-tensorflow-hub \
                    port:py${python.version}-tensorflow-probability

    build {
    }

    destroot.cmd    pip-${python.branch}
    destroot.args \
                    --ignore-installed \
                    --no-cache-dir \
                    --no-dependencies \
                    --root ${destroot} \
                    ${distpath}/${distfiles}
    destroot.post_args

    livecheck.type  none
