python.version 37

if {${name} ne ${subport}} {

    depends_build-append \
        port:py${python.version}-setuptools

    depends_test-append \
        port:py${python.version}-pytest

    livecheck.type none 

}

# Only allow numbers, to avoid pre-release versions
github.livecheck.regex  {([0-9.]+)}
