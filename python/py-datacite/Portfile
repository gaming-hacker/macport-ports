    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} AUTHORS.rst \
            CHANGES.rst CONTRIBUTING.rst LICENSE \
            MAINTAINERS README.rst ${destroot}${docdir}
