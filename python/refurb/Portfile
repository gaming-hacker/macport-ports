python.versions     310
python.pep517       yes

if {${name} ne ${subport}} {
    depends_lib-append \
                    port:py${python.version}-mypy \
                    port:py${python.version}-tomli

    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} README.md \
            LICENSE ${destroot}${docdir}
    }

}
