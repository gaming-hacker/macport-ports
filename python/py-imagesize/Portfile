size    1274955

python.versions 39

if {$subport ne $name} {
    depends_build-append \
                    port:py${python.version}-setuptools

    post-destroot {
        xinstall -d ${destroot}${prefix}/share/doc/${subport}
        xinstall -m 0644 -W ${worksrcpath} README.rst \
           ${destroot}${prefix}/share/doc/${subport}
    }

    livecheck.type  none
}
