PortSystem          1.0
PortGroup           python 1.0

name                py-rstcheck
version             3.4.0
revision            0

categories-append   devel
supported_archs     noarch
license             MIT
maintainers         {reneeotten @reneeotten} openmaintainer

description         Checks syntax of reStructuredText and code blocks nested within it
long_description    ${description}

homepage            https://github.com/myint/rstcheck

checksums           rmd160  708527ef67f4673d3175fbcdcecc203a1b5e4b17 \
                    sha256  a142f780bcfa5d17407f1729c66a45ddbbb979789dafda16b19aa347ea8a2d4c \
                    size    21245

python.versions     37 38 39 310

if {${subport} ne ${name}} {
    depends_build-append \
                    port:py${python.version}-setuptools

    depends_lib-append \
                    port:py${python.version}-docutils

    if {${python.version} < 38} {
        depends_lib-append \
                    port:py${python.version}-importlib-metadata
    }

    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} LICENSE \
            AUTHORS.rst README.rst ${destroot}${docdir}
    }
}
