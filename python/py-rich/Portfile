                        port:py${python.version}-commonmark \
                        port:py${python.version}-pygments

    if {${python.version} < 38} {
        depends_run-append \
                        port:py${python.version}-typing_extensions
    }

    test.run            yes
    test.cmd            ${python.bin}
    test.target         -m rich

