python.versions 39

if {${name} ne ${subport}} {
    depends_build-append \
                    port:py${python.version}-setuptools

    post-destroot {
        xinstall -m 0755 -d ${destroot}${prefix}/share/doc/${subport}
        xinstall -m 0644 -W ${worksrcpath} README.md LICENSE \
            AUTHORS ${destroot}${prefix}/share/doc/${subport}
    }
}
