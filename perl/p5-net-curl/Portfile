if {${perl5.major} != ""} {
    depends_lib-append \
                    port:p${perl5.major}-extutils-pkgconfig \
                    port:curl

    patchfiles      macports-curl-inc-dir.patch

    post-patch {
        reinplace "s|@@MP_CURL_INCDIR@@|${prefix}/include|" ${worksrcpath}/Makefile.PL
    }

    configure.env-append \
                    CURL_CONFIG=${prefix}/bin/curl-config
}
