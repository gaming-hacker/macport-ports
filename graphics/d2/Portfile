PortSystem          1.0
PortGroup           golang 1.0

go.setup            github.com/terrastruct/d2 0.1.0 v
go.package          oss.terrastruct.com/d2
github.tarball_from archive
revision            0

description         D2 is a modern diagram scripting language that turns text \
                    to diagrams.

long_description    {*}${description}

categories          graphics
installs_libs       no
license             MPL-2
maintainers         {gmail.com:herby.gillot @herbygillot} \
                    openmaintainer

checksums           rmd160  abb433b03d1a0d4760516eb5e7745e60caceb91a \
                    sha256  78fac0235fd583e28d961b0fd066994095a9cec4d5a834747833bbab042ab1c0 \
                    size    39697197

build.env-delete    GO111MODULE=off GOPROXY=off

build.pre_args-append \
                    -o ./bin

build.args          ./cmd/...

pre-build {
    file mkdir ${worksrcpath}/bin
}

destroot {
    foreach x [glob ${worksrcpath}/bin/*] {
        xinstall -m 0755 ${x} ${destroot}${prefix}/bin/
    }
}
