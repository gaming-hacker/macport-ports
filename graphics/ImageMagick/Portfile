                            --with-apple-font-dir=/Library/Fonts \
                            --with-urw-base35-font-dir=${prefix}/share/fonts/urw-core35-fonts \
                            --with-dejavu-font-dir=${prefix}/share/fonts/dejavu-fonts \
                            --enable-openmp \
                            --with-fftw \
                            --with-quantum-depth=64

