                            qttools \
                            qttranslations \
                            sqlite-plugin

variant RemoteSQL description { Add support MySQL/MariaDB and PostgreSQL databases } {
    qt5.depends_component   qtdeclarative \
                            qtmacextras \
                            qtmultimedia \
                            qtsvg \
                            qttools \
