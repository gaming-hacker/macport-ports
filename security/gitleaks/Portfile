                    sha256  de027c9eb14af60ed93fb38e52d89b9f14bd929627890d83baafea615ab60820 \
                    size    86967

# allow Go to fetch dependencies at build time
build.env-delete    GO111MODULE=off GOPROXY=off

build.cmd           make
