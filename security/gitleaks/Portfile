                    sha256  99ae0a14f6cd339b61ef4cac022787dbdfa2ce162007d3be75645f461734f3d3 \
                    size    86970

# allow Go to fetch dependencies at build time
build.env-delete    GO111MODULE=off GOPROXY=off

build.cmd           make
build.pre_args-append \
                    VERSION=${version}
build.args          build

