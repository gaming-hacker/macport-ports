pre-test {
    configure.args-replace      -DBUILD_TESTING=OFF -DBUILD_TESTING=ON
    configure.args-replace      -DJSON_BuildTests=OFF -DJSON_BuildTests=ON
    portconfigure::configure_main
    portbuild::build_main
}

