PortSystem          1.0

name                gutils-suite
version             1.0
revision            3

categories          sysutils
platforms           darwin
supported_archs     noarch
license             none

maintainers         {@mascguy} \
                    openmaintainer

description         Meta port for GNU utils
long_description    \
    Meta port encompassing the foundational GNU utils suite

homepage
distfiles
livecheck.type      none

depends_lib-append \
                    port:bc \
                    port:bison \
                    port:coreutils \
                    port:diffutils \
                    port:findutils \
                    port:flex \
                    port:gawk \
                    port:gtime \
                    port:gpatch \
                    port:grep \
                    port:gsed \
                    port:parallel

use_configure       no

build {}

destroot {
    set docdir ${destroot}${prefix}/share/doc/${subport}
    xinstall -d ${docdir}
    system "echo \"${subport} is a meta port\" > \"${docdir}/README.txt\""
}

