# Patch package.json to allow using Node versions higher than 14
patchfiles          patch-package.json.diff

post-patch {
    reinplace \
        {s|^ELECTRON_BUILDER_EXTRA_ARGS.*|ELECTRON_BUILDER_EXTRA_ARGS = --mac --dir|} \
        ${worksrcpath}/Makefile
}

