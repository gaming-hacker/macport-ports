PortGroup               github 1.0
# Must use -DCMAKE_BUILD_TYPE=Release
PortGroup               cmake 1.0

github.setup            neovim neovim 68d40388f356587726ea7db83f87846dfaecf9d9
name                    neovim-devel
version                 20210602
revision                0
categories              editors
platforms               darwin
maintainers             {l2dy @l2dy} \
                        openmaintainer
license                 Apache-2 Vim GPL-2+

description             Neovim is a aggressively refactored fork of Vim

long_description \
    Neovim is a project that seeks to aggressively refactor Vim. It already adds \
    a new plugin architecture, job control, and a remote API.

homepage                https://neovim.io

checksums               rmd160  1e15b36a8a936b591fcf7c568cb7ac538163f0b4 \
sha256  89635a6250df2c3c8ac8763b87420789dea4c2999cdcfb1dedeacfa9f5cf49b7 \
size    10284182

depends_build-append    port:pkgconfig

depends_lib             port:gettext \
                        port:libiconv \
                        port:libuv \
                        port:libvterm \
                        port:libtermkey \
                        port:tree-sitter \
                        port:unibilium \
                        port:msgpack \
                        path:lib/libluajit-5.1.2.dylib:luajit \
                        port:lua51-lpeg \
                        port:lua51-mpack \
                        port:luv-luajit

cmake.out_of_source     yes

configure.args-append   -DUSE_BUNDLED=OFF \
                        -DLUA_PRG=${prefix}/bin/luajit

notes {
    If you want to share your existing Vim configuration with Neovim, you can add these symlinks:
        ln -s ~/.vim ~/.config/nvim
        ln -s ~/.vimrc ~/.config/nvim/init.vim
    For possible incompatible changes and differences to Vim check ':help nvim-intro' in nvim.
}
