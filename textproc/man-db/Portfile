size     1885840

depends_lib         port:libpipeline
depends_build       port:pkgconfig \
                    port:autoconf \
                    port:automake \
                    port:libtool

configure.args      --prefix=${prefix} \
                    --disable-cache-owner \
                    --disable-setuid
